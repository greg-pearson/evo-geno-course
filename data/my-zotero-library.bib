@article{fonken2013a,
  title = {Dim {{Light}} at {{Night Disrupts Molecular Circadian Rhythms}} and {{Increases Body Weight}}},
  author = {Fonken, Laura K. and Aubrecht, Taryn G. and {Mel{\'e}ndez-Fern{\'a}ndez}, O. Hecmarie and Weil, Zachary M. and Nelson, Randy J.},
  year = {2013},
  month = aug,
  volume = {28},
