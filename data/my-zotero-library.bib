@article{pol2014jv,
  title = {Long-{{Distance Interferon Signaling}} within the {{Brain Blocks Virus Spread}}},
  author = {van den Pol, Anthony N. and Ding, Siyuan and Robek, Michael D.},
  year = {2014},
  month = apr,
  volume = {88},
