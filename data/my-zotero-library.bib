@article{detje2015jv,
  title = {Upon {{Intranasal Vesicular Stomatitis Virus Infection}}, {{Astrocytes}} in the {{Olfactory Bulb Are Important Interferon Beta Producers That Protect}} from {{Lethal Encephalitis}}},
